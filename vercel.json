{
    "version": 2,
    "builds": [
      {
        "src": "PortFolio_BackEnd/server.js",
        "use": "@vercel/node",
        "config": {
          "includeFiles": "PortFolio_BackEnd/auth.env"
        }
      },
      {
        "src": "PortFolio_FrontEnd/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "PortFolio_FrontEnd/dist"
        }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/PortFolio_BackEnd/server.js"
      },
      {
        "src": "/(.*)",
        "dest": "/PortFolio_FrontEnd/$1"
      }
    ]
  }
  